            <string>// ADVANCE TIME //
time = (time + delta_time * 0.000001) mod (day_length + night_length);
// FIND OUT IF IT'S DAY TIME OR NIGHT TIME //
var is_day = (time &lt; day_length);
// UPDATE THE SUN //
var angle = 0;
if(is_day) {
    angle = time / day_length * 180;
    lfx_light_directional_blend_set(sun, merge_colour(lfx_light_directional_blend_get(sun), sun_colour, light_speed));
} else {
    angle = 180 + (time - day_length) / night_length * 180;
    lfx_light_directional_blend_set(sun, merge_colour(lfx_light_directional_blend_get(sun), c_black, light_speed));
}
lfx_light_directional_position_set(sun, lengthdir_x(1, angle), sun_y, -lengthdir_y(1, angle));
// UPDATE THE MOON //
if(moon_cycle &gt; 0) {
    moon_angle = (moon_angle + 360 / (moon_cycle) * delta_time * 0.000001) mod 360;
}
lfx_light_directional_position_set(moon, lengthdir_x(1, moon_angle), moon_y, -lengthdir_y(1, moon_angle));
lfx_light_directional_blend_set(moon, moon_colour);
</string>
